@meta(id="complete-test", version=1.0)
  title: "Complete FACET Test"
  tags: ["test", "complete"]
  created: @2024-12-07T10:00:00Z

@system(role="Assistant")
  style &polite: "Polite and helpful"
  personality: *polite
  constraints:
    - "Respond in English"
    - "Use markdown"
  timeout: 30s
  max_tokens: 4096

@user
  query: """
  Tell me about FACET capabilities
  """ |> dedent |> trim

  data:
    format: "json"
    size: 2048KB

@plan
  - "Introduction to FACET"
  - "Core features"
  - "Usage examples"

@examples
  basic:
    input: "Hello"
    output: "Hi there!"
  complex:
    input: """
    Complex query with
    multiple lines
    """ |> dedent
    output: "Complex response"

@output(format="json", required=true)
  description: "JSON Schema for response"
  schema: ```json
  {
    "type": "object",
    "required": ["title", "content", "examples"],
    "properties": {
      "title": {"type": "string"},
      "content": {"type": "string"},
      "examples": {
        "type": "array",
        "items": {"type": "string"}
      }
    }
  }
  ``` |> json_parse

  validation: "Strict schema validation required"
